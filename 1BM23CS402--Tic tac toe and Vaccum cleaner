      "cell_type": "code",
      "source": [
        "import random\n",
        "class VacuumCleaner:\n",
        "    def __init__(self, grid_size):\n",
        "        self.grid_size = grid_size\n",
        "        self.grid = [[0 for _ in range(grid_size)] for _ in range(grid_size)]\n",
        "        self.position = (0, 0)\n",
        "\n",
        "    def clean(self):\n",
        "        x, y = self.position\n",
        "        if self.grid[x][y] == 0:\n",
        "            self.grid[x][y] = 1\n",
        "            print(f\"Cleaned position: ({x}, {y})\")\n",
        "        else:\n",
        "            print(f\"Position ({x}, {y}) is already clean.\")\n",
        "\n",
        "    def move(self):\n",
        "        x, y = self.position\n",
        "        direction = random.choice(['up', 'down', 'left', 'right'])\n",
        "\n",
        "        if direction == 'up' and x > 0:\n",
        "            self.position = (x - 1, y)\n",
        "        elif direction == 'down' and x < self.grid_size - 1:\n",
        "            self.position = (x + 1, y)\n",
        "        elif direction == 'left' and y > 0:\n",
        "            self.position = (x, y - 1)\n",
        "        elif direction == 'right' and y < self.grid_size - 1:\n",
        "            self.position = (x, y + 1)\n",
        "            print(f\"Moved to position: {self.position}\")\n",
        "    def simulate(self, steps):\n",
        "        for _ in range(steps):\n",
        "            self.move()\n",
        "            self.clean()\n",
        "        print(\"Final grid state:\")\n",
        "        for row in self.grid:\n",
        "            print(' '.join(['C' if cell == 1 else 'D' for cell in row]))\n",
        "vacuum = VacuumCleaner(grid_size=5)\n",
        "vacuum.simulate(10)\n"
      ],
